<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Roboto&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">

  <link rel='stylesheet' href='bootstrap/dist/css/bootstrap.min.css'/>

  <link rel="stylesheet" href="/css/predmeti.css">
  <!-- css za ikonice -->
  <link rel="stylesheet" href="/css/ikonice.css">

  <title>Dashboard</title>
</head>

<body>

<div class="wrapper">
  <!-- Pocinje Vertikalni NavBar -->

  <nav id="sidebar">
    <div class="sidebar-header ml-5 pl-5">
      <div class="ml-4">
        <img src="/images/logo.png" alt="">
      </div>
    </div>

    <ul class="list-unstyled components ml-5 ">

      <li class="mb-3 pt-1 aktivan-dash">
        <a href="/">
          <span class="icon-dashbempty"></span>
          Dashboard
        </a>
      </li>

      <li class="mb-3 pt-1 sidebar-hover">
        <a href="/kupci">
          <span class="icon-user"></span>
          Svi Kupci
        </a>
      </li>

    </ul>

  </nav>
  <div class="mr-2">
    <button type="button" id="sidebarCollapse" class="navbar-btn">
      <span></span>
      <span></span>
      <span></span>

    </button>
  </div>

  <!-- Zavrsava se Vertikalni NavBar -->



  <div id="content">
    <!-- Pocinje Tabela -->
    <div class="container">
      <div class="row">
        <div class=" table-responsive table-div-small col-12   my-5">
          <div class="row px-4 py-2 my-3 mb-5">
            <h4>Aktuelne Utakmice</h4>

          </div>
          <% if(odgovor.odgovor.length!=0){%>
          <% for(var i =0; i<2; i++){ %>
              <% if(odgovor.odgovor.length==i){%>
              <% break;}%>
              <a href="/utakmica/<%= odgovor.odgovor[i].id %>">
                <div class="col-12 d-flex justify-content-center beleske-text px-3 mb-4 pb-3 mx-3 pt-3">
                  <%= odgovor.odgovor[i].tim1 %> - <%= odgovor.odgovor[i].tim2 %>
                </div>
          <% } %>


          <div id="prikazisve" class="collapse">
            <% for(var i =2; i<odgovor.odgovor.length; i++){ %>

            <a href="/utakmica/<%= odgovor.odgovor[i].id %> ">
              <div class="col-12 d-flex justify-content-center beleske-text px-3 mb-4 pb-3 mx-3 pt-3">
                <%= odgovor.odgovor[i].tim1 %> - <%= odgovor.odgovor[i].tim2 %>
              </div>
              <% } %>

          </div>
          <div class="my-3 d-flex justify-content-center">
            <div>
              <a href="#" data-toggle="collapse" data-target="#prikazisve"
                 class="btn btn-danger  "><span class="icon-plusadd"></span>
                Prikaži sve</a>
            </div>
          </div>
        </div>
        <% } %>

      </div>
      <div class="row">
        <div class="col-12 table-div-small p-5">
          <div class="row  py-2 ">
            <h4>Poslednja Obaveštenja</h4>
          </div>
          <div class="row">
            <% if(odgovor.aktivnost.length!=0){%>

            <% for(var i =0; i<2; i++){ %>
                <% if(odgovor.aktivnost.length==i){%>
                  <% break;}%>
              <div class="col-12 beleske-text my-3 px-4 py-3 mx-1 ">
                <div class="row pl-3 ">
                  <h5 class="pt-1"><%=odgovor.aktivnost[i].Naslov%></h5>
                  <div class="pl-3 ">
                    <span class="icon-calendar mr-1"></span>
                    <span class="text small "><%= " "+odgovor.aktivnost[i].datum.getDate()+"/"+(odgovor.aktivnost[i].datum.getMonth()+1 )+"/"+odgovor.aktivnost[i].datum.getFullYear() %></span>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12"><%=odgovor.aktivnost[i].Sadrzaj%>
                  </div>

                </div>

              </div>

            <%}%>





            <div id="prikazisve2" class="collapse">

              <% for(var i =2; i<odgovor.aktivnost.length; i++){ %>

              <div class="col-12 beleske-text my-3 px-4 py-3 mx-1 ">
                <div class="row pl-3 ">
                  <h5 class="pt-1"><%=odgovor.aktivnost[i].Naslov%></h5>
                  <div class="pl-3 ">
                    <span class="icon-calendar mr-1"></span>
                    <span class="text small "><%= " "+odgovor.aktivnost[i].datum.getDate()+"/"+(odgovor.aktivnost[i].datum.getMonth()+1)+ "/"+odgovor.aktivnost[i].datum.getFullYear() %></span>
                  </div>
                </div>

                <div class="row">
                  <div class="col-12"><%=odgovor.aktivnost[i].Sadrzaj%>
                  </div>

                </div>

              </div>

              <%}%>
              <%}%>



            </div><br>
           
           


          </div>
           <a href="#" data-toggle="collapse" data-target="#prikazisve2"
               class="btn btn-danger mt-4 "><span class="icon-plusadd"></span>
              Prikaži sve</a>
        </div>
      </div>


    </div>
  </div>
</div>


<script src="/bootstrap/dist/js/bootstrap.js"></script>
<script src="/javascripts/script.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"
        integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ"
        crossorigin="anonymous"></script>




<script type="text/javascript">
  $(document).ready(function () {
    $('#sidebarCollapse').on('click', function () {
      $('#sidebar').toggleClass('active');
      $(this).toggleClass('active');
    });
  });
</script>

</body>

</html>