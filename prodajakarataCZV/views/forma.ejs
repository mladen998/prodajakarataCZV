    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/predmeti.css">
    <!-- css za ikonice -->
    <link rel="stylesheet" href="/css/ikonice.css">

    <title>Narucivanje</title>
</head>

<body>

<div class="wrapper">
    <!-- Pocinje Vertikalni NavBar -->

    <nav id="sidebar">
        <div class="sidebar-header ml-5 pl-5">
            <div class="ml-4">
                <img src="/images/logo.png" alt="">
            </div>
        </div>

        <ul class="list-unstyled components ml-5 ">

            <li class="mb-3 pt-1 sidebar-hover-dash">
                <a href="/">
                    <span class="icon-dashbempty"></span>
                    Dashboard
                </a>
            </li>

            <li class="mb-3 pt-1 sidebar-hover">
                <a href="/kupci">
                    <span class="icon-user"></span>
                    Svi Kupci
                </a>
            </li>

        </ul>

    </nav>
    <div class="mr-2">
        <button type="button" id="sidebarCollapse" class="navbar-btn">
            <span></span>
            <span></span>
            <span></span>

        </button>
    </div>

    <!-- Zavrsava se Vertikalni NavBar -->

    <div id="content">
        <



        <!-- Pocinje Tabela -->
        <div class="container">
            <div class="row d-flex justify-content-center pt-5 mb-0">

                <div class=" table-responsive table-div-small col-5  m-5 py-5 mb-0">
                    <div class="row d-flex justify-content-center"><h3><%= odgovor.tim %></h3><br></div>
                    <div class="row d-flex justify-content-center mb-0 pb-0"><span><%= odgovor.vreme+" "+odgovor.datum %></span><br></div>
                    <div class="d-flex justify-content-center pt-0">

                        <form class="m-3" method="post" action="/forma/kupovina">
                            <div class="d-flex justify-content-center mt-0 mb-3">
                                <img src="/images/logo.png" alt="">
                            </div>
                            <div class="form-group">
                                <label for="ime" class="d-flex justify-content-center" required="true">Ime</label>
                                <input type="text"  name='ime' class="form-control" id="text" value=""  placeholder="Unesi Ime">

                            </div>
                            <div class="form-group">
                                <label for="prezime" class="d-flex justify-content-center">Prezime</label>
                                <input type="text" name='prezime' class="form-control" id="text" value=""  placeholder="Unesi Prezime">

                            </div>
                            <div class="form-group">
                                <label for="email" class="d-flex justify-content-center">Email Adresa</label>
                                <input type="email" name='email' class="form-control" id="text" value=""  placeholder="Unesi Email">

                            </div>
                            <div class="form-group">
                                <label for="karte" class="d-flex justify-content-center">Broj Karata</label>
                                <input type="number"  name='karte' min="1" max="<%=odgovor.max%>>"class="form-control" id="text"  value="" placeholder="Unesi broj karata">

                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" id="naruci"class="btn btn-danger">Naruƒçi</button>
                            </div>
                           <div class="ml-2 mt-5 "> <h3><%=odgovor.obavestenje%></h3></div>

                    </form>

                </div>
            </div>
        </div>
    </div>

</div>

<!-- Zavrsava se tabela -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="/javascripts/script.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"
        integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ"
        crossorigin="anonymous"></script>



<script type="text/javascript">
    $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
            $(this).toggleClass('active');
        });
    });
</script>

</body>

</html>